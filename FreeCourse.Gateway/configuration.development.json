{
  "Routes": [
    {
      // Katalog servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5011 // Katalog servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/catalog/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ], // Desteklenen HTTP metodları
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme", // Kimlik doğrulama şeması
        "AllowedScopes": [ "catalog_fullpermission" ] // İzin verilen kapsam
      }
    },
    {
      // Fotoğraf stok servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5012 // Fotoğraf stok servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/photostock/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme",
        "AllowedScopes": [ "photo_stock_fullpermission" ]
      }
    },
    {
      // Sepet servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5013 // Sepet servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/basket/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme",
        "AllowedScopes": [ "basket_fullpermission" ]
      }
    },
    {
      // İndirim servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5014 // İndirim servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/discount/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "DelegatingHandlers": [ "TokenExhangeDelegateHandler" ], // Token exchange işlemi için delegating handler
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme"
      }
    },
    {
      // Sipariş servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5015 // Sipariş servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/order/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme",
        "AllowedScopes": [ "order_fullpermission" ]
      }
    },
    {
      // Fake payment servisine yönlendirme
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5016 // Fake payment servisi için port
        }
      ],
      "UpstreamPathTemplate": "/services/fakepayment/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "UpstreamScheme": "http",
      "DelegatingHandlers": [ "TokenExhangeDelegateHandler" ], // Token exchange işlemi için delegating handler
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "GatewayAuthenticationScheme"
      }
    }
  ],
  // Global yapılandırma ayarları
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000" // API Gateway'in temel URL'si
  }
}
